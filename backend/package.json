{
  "name": "fayda-omo-api-backend",
  "version": "1.0.0",
  "description": "Backend API for Fayda-Omo (Afrojobs-style on-demand service in Ethiopia)",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "verify:fayda": "tsx src/scripts/verifyFayda.ts",
    "seed": "tsx src/scripts/seedData.ts",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "npm test -- --coverage"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "connect-mongo": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.21.0",
    "mssql": "^12.2.0",
    "node-cron": "^3.0.3",
    "oracledb": "^6.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "resolutions": {
    "cross-spawn": "^7.0.6",
    "elliptic": "^6.5.7"
  },
  "keywords": [
    "ethiopia",
    "fayda",
    "omo",
    "omo bank",
    "Bank",
    "Banks",
    "api",
    "nodejs",
    "typescript",
    "mongoose"
  ],
  "author": "relief",
  "license": "ISC"
}
